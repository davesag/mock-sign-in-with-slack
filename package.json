{
  "name": "@davesag/mock-sign-in-with-slack",
  "version": "1.0.6",
  "description": "A mock server that emulates the main features of the Sign-in With Slack system.",
  "engines": {
    "node": ">= 11.9.0",
    "npm": ">= 6.5.0"
  },
  "main": "index.js",
  "scripts": {
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "prettier": "prettier --single-quote --no-semi --write '**/*.{js,json}'",
    "seed": "NODE_PATH=. node tasks/seed",
    "start": "NODE_PATH=. node index.js",
    "test": "npm run test:unit",
    "test:all": "npm run test:unit; npm run test:integration",
    "test:server": "find ./test/server -name '*.spec.js' | NODE_ENV=test NODE_PATH=. OFFLINE=true xargs mocha --require ./test/server/test_helper.js --bail",
    "test:unit": "find ./test/unit -name '*.spec.js' | NODE_ENV=test NODE_PATH=. xargs mocha --require ./test/unit/test_helper.js",
    "test:unit:cov": "find ./test/unit -name '*.spec.js' | NODE_ENV=test NODE_PATH=. xargs nyc mocha --require ./test/unit/test_helper.js"
  },
  "keywords": [
    "slack",
    "oAuth",
    "mock-server",
    "api",
    "mock"
  ],
  "author": "Dave Sag <davesag@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/davesag/mock-sign-in-with-slack.git",
  "bugs": {
    "url": "https://github.com/davesag/mock-sign-in-with-slack/issues"
  },
  "homepage": "https://github.com/davesag/mock-sign-in-with-slack#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "js-yaml": "^3.13.1",
    "node-http-error": "^2.0.0",
    "pug": "^2.0.3",
    "traverse-folders": "^1.0.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "ajv": "^6.10.0",
    "chai": "^4.2.0",
    "chai-almost": "^1.0.1",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "husky": "^2.0.0",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.2",
    "mock-req-res": "^1.0.5",
    "nyc": "^14.0.0",
    "prettier": "^1.16.4",
    "proxyquire": "^2.1.0",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "supertest": "^4.0.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "never"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/index.js",
      "src/utils/logger.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "greenkeeper": {
    "ignore": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
